<%- include('partials/header', { title: title }) %>

<h2>Admin - Upload bài học</h2>
<% if (message) { %>
  <div class="alert alert-info"><%= message %></div>
<% } %>

<form method="post" action="/admin/upload-lesson" enctype="multipart/form-data">
  <div class="form-group">
    <label>Quyển</label>
    <select name="book_id" class="form-control" required>
      <% books.forEach(b => { %>
        <option value="<%= b.id %>"><%= b.title %></option>
      <% }) %>
    </select>
  </div>

  <div class="form-group">
    <label>Tiêu đề</label>
    <input name="title" class="form-control" required>
  </div>

  <div class="form-group">
    <label>Mục tiêu</label>
    <textarea name="objectives" class="form-control"></textarea>
  </div>

  <div class="form-group">
    <label>Nội dung (HTML)</label>
    <textarea name="content" class="form-control" rows="8"></textarea>
    <small class="form-text text-muted">Bạn có thể dán HTML đơn giản ở đây. Sau này mình sẽ hướng dẫn tích hợp CKEditor.</small>
  </div>

  <div class="form-group">
    <label>File đính kèm (pdf/docx/...)</label>
    <input type="file" name="attachment" class="form-control-file">
  </div>

  <button class="btn btn-primary">Upload</button>
</form>

<%- include('partials/footer') %>
