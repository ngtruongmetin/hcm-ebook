<%- include('partials/header', { title: title }) %>

<div class="container mt-4" style="max-width:900px;">
  <h2><%= article.title %></h2>
  <div class="text-muted mb-2">Đăng: <%= new Date(article.created_at).toLocaleString() %> — bởi <%= article.created_by %></div>

  <% if (article.cover) { %>
    <img src="<%= article.cover %>" alt="cover" style="width:100%; max-height:360px; object-fit:cover; border-radius:6px;" class="mb-3">
  <% } %>

  <% if (article.summary) { %>
    <p class="lead"><%= article.summary %></p>
  <% } %>

  <div class="card p-3 mb-3">
    <%- article.content || '<p>(Không có nội dung)</p>' %>
  </div>

  <% if (article.attachment) { %>
    <p><a href="<%= article.attachment %>" class="btn btn-outline-primary" target="_blank">Tải tài liệu đính kèm</a></p>
  <% } %>

</div>

<%- include('partials/footer') %>
