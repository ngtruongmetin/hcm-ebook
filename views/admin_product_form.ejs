<%- include('partials/header', { title: title }) %>

<div class="container mt-4">
  <h3><%= title %></h3>
  <% if (message) { %><div class="alert alert-danger"><%= message %></div><% } %>

  <form action="<%= product ? ('/admin/product/edit/' + product.id) : '/admin/product/new' %>" method="post" enctype="multipart/form-data">
    <div class="mb-3">
      <label class="form-label">Nhóm</label>
      <select name="group_id" class="form-control" required>
        <option value="">-- chọn nhóm --</option>
        <% groups.forEach(g => { %>
          <option value="<%= g.id %>" <%= product && product.group_id == g.id ? 'selected' : '' %>><%= g.name %></option>
        <% }) %>
      </select>
    </div>

    <div class="mb-3">
      <label class="form-label">Tiêu đề</label>
      <input name="title" class="form-control" value="<%= product ? product.title : '' %>" required>
    </div>

    <div class="mb-3">
      <label class="form-label">Ảnh cover</label>
      <input type="file" name="cover" class="form-control-file">
      <% if (product && product.cover) { %>
        <div class="mt-2"><img src="<%= product.cover %>" style="width:140px;"></div>
      <% } %>
    </div>

    <div class="mb-3">
      <label class="form-label">Giá</label>
      <input name="price" type="number" step="0.01" class="form-control" value="<%= product ? product.price : 0 %>">
    </div>

    <div class="mb-3">
      <label class="form-label">Tiền tệ</label>
      <input name="currency" class="form-control" value="<%= product ? product.currency : 'VND' %>">
    </div>

    <div class="mb-3">
      <label class="form-label">SKU</label>
      <input name="sku" class="form-control" value="<%= product ? product.sku : '' %>">
    </div>

    <div class="mb-3">
      <label class="form-label">Vị trí (position)</label>
      <input name="position" type="number" class="form-control" value="<%= product ? product.position : 0 %>">
    </div>

    <button class="btn btn-primary">Lưu</button>
    <a href="/admin" class="btn btn-secondary">Hủy</a>
  </form>

  <% if (product) { %>
    <form action="/admin/product/delete" method="post" class="mt-3" onsubmit="return confirm('Xóa sản phẩm?')">
      <input type="hidden" name="id" value="<%= product.id %>">
      <button class="btn btn-danger">Xóa sản phẩm</button>
    </form>
  <% } %>
</div>

<%- include('partials/footer') %>
